# ==============================================================================
# VPS PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================================================
# This file contains production-ready environment variables for deployment
# on VPS with domain: https://footbalmarketplace.albech.me
# 
# IMPORTANT: 
# - Change ALL secret keys before deployment
# - Ensure proper file permissions (600) on production server
# - Never commit this file to version control
# ==============================================================================

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
NODE_ENV=production
PORT=3000

# Domain and URL Configuration
DOMAIN=footbalmarketplace.albech.me
BASE_URL=https://footbalmarketplace.albech.me
API_BASE_URL=https://footbalmarketplace.albech.me/api

# ==============================================================================
# DATABASE CONFIGURATION (MySQL/MariaDB)
# ==============================================================================
# Update these with your VPS database credentials
DB_HOST=localhost
DB_PORT=3306
DB_NAME=football_marketplace_prod
DB_USER=football_user
DB_PASSWORD=CHANGE_ME_STRONG_DB_PASSWORD_123!@#

# Database Connection Pool Settings
DB_CONNECTION_LIMIT=20
DB_QUEUE_LIMIT=0
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# ==============================================================================
# JWT & AUTHENTICATION CONFIGURATION
# ==============================================================================
# CRITICAL: Change these to strong, unique secrets in production
JWT_SECRET=CHANGE_ME_SUPER_STRONG_JWT_SECRET_FOR_PRODUCTION_xyz789!@#$%^&*()
JWT_REFRESH_SECRET=CHANGE_ME_SUPER_STRONG_REFRESH_SECRET_FOR_PRODUCTION_abc123!@#$%^&*()
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================================================
# ADMIN PANEL CONFIGURATION
# ==============================================================================
# Admin session secret - change to a strong random string
ADMIN_SESSION_SECRET=CHANGE_ME_ADMIN_SESSION_SECRET_FOR_PRODUCTION_def456!@#$%^&*()

# ==============================================================================
# FILE UPLOAD CONFIGURATION
# ==============================================================================
# Upload directory (relative to server root or absolute path)
UPLOAD_DIR=/var/www/footbalmarketplace/uploads
# Maximum file size in bytes (10MB = 10485760 bytes)
MAX_FILE_SIZE=10485760

# Allowed file types
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,txt

# ==============================================================================
# SECURITY & RATE LIMITING
# ==============================================================================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://footbalmarketplace.albech.me,https://www.footbalmarketplace.albech.me
CORS_CREDENTIALS=true

# ==============================================================================
# SSL/TLS CONFIGURATION (if using custom certificates)
# ==============================================================================
# Leave empty if using reverse proxy (nginx/apache) for SSL
SSL_CERT_PATH=
SSL_KEY_PATH=

# ==============================================================================
# EMAIL CONFIGURATION (if email features are added)
# ==============================================================================
# SMTP Configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Email settings
FROM_EMAIL=noreply@footbalmarketplace.albech.me
FROM_NAME=Football Marketplace

# ==============================================================================
# LOGGING & MONITORING
# ==============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE=/var/log/football-marketplace/app.log

# Enable/disable specific logging
ENABLE_ACCESS_LOGS=true
ENABLE_ERROR_LOGS=true
ENABLE_DB_LOGS=false

# ==============================================================================
# CACHE CONFIGURATION (if Redis is used)
# ==============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================================================
# EXTERNAL SERVICES (if needed)
# ==============================================================================
# Google Services (for OAuth, Maps, etc.)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Payment gateways (if payment features are added)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# ==============================================================================
# BACKUP & MAINTENANCE
# ==============================================================================
# Backup settings
BACKUP_DIR=/var/backups/football-marketplace
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're performing scheduled maintenance. Please check back soon."

# ==============================================================================
# PERFORMANCE SETTINGS
# ==============================================================================
# Session settings
SESSION_SECRET=CHANGE_ME_SESSION_SECRET_FOR_PRODUCTION_ghi789!@#$%^&*()
SESSION_MAX_AGE=86400000

# Compression
ENABLE_GZIP=true

# Static file caching (in seconds)
STATIC_CACHE_MAX_AGE=31536000

# ==============================================================================
# SOCKET.IO CONFIGURATION
# ==============================================================================
SOCKET_CORS_ORIGIN=https://footbalmarketplace.albech.me,https://www.footbalmarketplace.albech.me
SOCKET_TRANSPORTS=polling,websocket

# ==============================================================================
# TIMEZONE & LOCALIZATION
# ==============================================================================
TZ=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ar

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Enable/disable specific features
ENABLE_REGISTRATION=true
ENABLE_CHAT=true
ENABLE_FILE_UPLOAD=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=false

# ==============================================================================
# DEPLOYMENT INFO (for reference)
# ==============================================================================
DEPLOYMENT_DATE=2025-09-11
DEPLOYMENT_VERSION=1.0.0
DEPLOYED_BY=production-team
